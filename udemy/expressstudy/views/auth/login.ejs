<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage){ %>
        <div class="user-message user-message-error">
            <%= errorMessage %>
        </div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input value="<%= oldInput.email %>" class="<%= validationErrors.find(p=> p.param === "email") ? "invalid" : "" %>" type="email" name="email" id="email">
            </div>
            <div class="form-control">
                <label for="imageUrl">Password</label>
                <input value="<%= oldInput.password %>" class="<%= validationErrors.find(p=> p.param === "password") ? "invalid" : "" %>" type="password" name="password" id="password">
            </div>
            <button class="btn" type="submit">Login</button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
        <div class="centered">
            <a class="btn danger" href="/reset">Reset password!</a>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>